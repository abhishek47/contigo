<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.contigo.app.MainActivity"
    android:background="#ffffff"
    tools:showIn="@layout/app_bar_main">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <LinearLayout
               android:id="@+id/home_top"
               android:layout_alignParentTop="true"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:background="@drawable/hometop"
               android:orientation="horizontal"
               android:paddingBottom="@dimen/activity_vertical_margin"
               android:paddingLeft="@dimen/activity_horizontal_margin"
               android:paddingRight="@dimen/activity_horizontal_margin"
               android:paddingTop="@dimen/activity_vertical_margin"
               android:theme="@style/ThemeOverlay.AppCompat.Dark">

               <de.hdodenhof.circleimageview.CircleImageView

                   android:id="@+id/profile_image"
                   android:layout_width="68dp"
                   android:layout_height="68dp"
                   android:layout_gravity="center_vertical"
                   android:src="@drawable/profile"
                   app:civ_border_width="2dp"
                   app:civ_border_color="#e2e2e2"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_marginStart="15dp"
                   android:layout_gravity="center_vertical"

                   android:orientation="vertical">

                   <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/profile_name"
                   android:textStyle="bold"
                   android:text="Android Studio"
                   android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                   <TextView
                       android:id="@+id/home_email"
                       android:layout_marginTop="5dp"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="android.studio@android.com" />

               </LinearLayout>

           </LinearLayout>




           <LinearLayout
               android:layout_below="@id/home_top"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:id="@+id/bSend"
               android:orientation="horizontal"
               android:background="@drawable/ripple_effect"
               android:padding="10dp">

               <de.hdodenhof.circleimageview.CircleImageView

                   android:layout_width="45dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="45dp"
                   app:civ_border_width="2dp"
                   app:civ_border_color="#e2e2e2"
                   android:src="@drawable/android3"/>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:paddingLeft="10dp"
                       android:textSize="16dp"
                       android:text="Send to Android"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/darker_gray"
                       android:paddingLeft="10dp"
                       android:layout_marginTop="1dp"
                       android:textSize="14dp"
                       android:text="Sharing contact with android."/>



               </LinearLayout>



           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/seperator"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:orientation="horizontal"
               android:id="@+id/bSendios"
               android:background="@drawable/ripple_effect"
               android:padding="10dp">

               <de.hdodenhof.circleimageview.CircleImageView

                   android:layout_width="45dp"
                   android:layout_gravity="center_vertical"
                   android:layout_height="45dp"
                   app:civ_border_width="2dp"
                   app:civ_border_color="#e2e2e2"
                   android:src="@drawable/applecircle"/>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/contact_name"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:paddingLeft="10dp"
                       android:textSize="16dp"
                       android:text="Send to IOS"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textAlignment="center"
                       android:id="@+id/contact_no"
                       android:textColor="@android:color/darker_gray"
                       android:paddingLeft="10dp"
                       android:layout_marginTop="1dp"
                       android:textSize="14dp"
                       android:text="Sharing contact with IOS."/>



               </LinearLayout>




           </LinearLayout>


           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/seperator"/>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="70dp"
                   android:id="@+id/bReceive"
                   android:orientation="horizontal"
                   android:background="@drawable/ripple_effect"
                   android:padding="10dp">

                   <de.hdodenhof.circleimageview.CircleImageView

                       android:layout_width="45dp"
                       android:layout_centerInParent="true"
                       android:layout_gravity="center_vertical"
                       android:layout_height="45dp"
                       android:src="@drawable/recv"
                       app:civ_border_width="2dp"
                       app:civ_border_color="#e2e2e2"/>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"
                           android:textStyle="bold"
                           android:paddingLeft="10dp"
                           android:textSize="16dp"
                           android:text="Receive Contact"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:textColor="@android:color/darker_gray"
                           android:paddingLeft="10dp"
                           android:layout_marginTop="1dp"
                           android:textSize="14dp"
                           android:text="Tap to receive contact."/>



                   </LinearLayout>


               </LinearLayout>

               <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/seperator"/>

           </LinearLayout>

           <android.support.design.widget.FloatingActionButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               app:backgroundTint="@color/floating_btn"
               android:layout_marginTop="110dp"
               android:layout_marginRight="20dp"
               android:layout_marginEnd="20dp"
               android:clickable="true"
               app:fabSize="normal"
               app:srcCompat="@drawable/open"
               android:id="@+id/select_contact" />



       </RelativeLayout>






</ScrollView>
