<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:weightSum="1">



    <include
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


<RelativeLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/bg_screen5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_centerInParent="true"
            android:src="@drawable/contigo_launcher"
            android:background="@color/bg_screen5"
            android:scaleType="fitXY"
            android:id="@+id/gifImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContiGo v1.0"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="Life is all about Contacts!So Let's ContiGo.The Fastest Profile Sharing App!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Visit Website"
            android:background="@drawable/btn_trans"
            android:id="@+id/btn_website"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="@string/powered_by"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:id="@+id/trumpets"
            android:textSize="@dimen/slide_desc" />



    </LinearLayout>
</RelativeLayout>


</LinearLayout>